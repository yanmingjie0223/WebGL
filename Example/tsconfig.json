{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": false,
		"pretty": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "bin/js",
		"rootDir": "src",
		"lib": [
			"es6",
			"dom",
		]
	},
	"include": [
		"src/**/*.ts",
		"libs"
	]
}